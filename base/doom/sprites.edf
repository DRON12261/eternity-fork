// Armor
pickupeffect GreenArmor
{
  effects GreenArmor
  message $GOTARMOR
  sound   itemup

  pfxname PFX_GREENARMOR
}
pickupeffect BlueArmor
{
  effects BlueArmor
  message $GOTMEGA
  sound   itemup

  pfxname PFX_BLUEARMOR
}

