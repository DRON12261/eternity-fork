weaponinfo Staff
{
  nextincycle  Gauntlets
  previncycle  Mace

  flags        FLEEMELEE|NOHITGHOSTS|SILENCER
  //mod          ""
  recoil       10

  tracker      WeaponStaff

  states
  @"
  Ready:
    STFF A 1 A_WeaponReady
    loop
  Deselect:
    STFF A 1 A_Lower
    loop
  Select:
    STFF A 1 A_Raise
    loop
  Fire:
    STFF B 6
    STFF C 8
    STFF B 8 A_ReFire
    goto ready
  "@
}

weaponinfo GoldWand
{
  ammotype     AmmoWandCrystal
  ammouse      1

  nextincycle  Crossbow
  previncycle  Gauntlets

  flags        SILENCER|HAPTICRECOIL
  //mod          ""
  recoil       10
  hapticrecoil 1
  haptictime   1

  tracker      WeaponGoldWand

  states
  @"
  Ready:
    GWND A 1 A_WeaponReady
    loop
  Deselect:
    GWND A 1 A_Lower
    loop
  Select:
    GWND A 1 A_Raise
    loop
  Fire:
    GWND B 3 
    GWND C 5 A_FireGoldWandPL1
    GWND D 3
    GWND D 0 A_ReFire
    goto Ready
  "@
}

weaponinfo Crossbow
{
  ammotype     AmmoEtherealArrow
  ammouse      1

  nextincycle  Blaster
  previncycle  GoldWand

  flags        SILENCER|HAPTICRECOIL
  //mod          ""
  recoil       30
  hapticrecoil 3
  haptictime   3

  tracker      WeaponCrossbow

  states
  @"
  Ready:
    CRBW AAAAAABBBBBBCCCCCC 1 A_WeaponReady
    loop
  Deselect:
    CRBW A 1 A_Lower
    loop
  Select:
    CRBW A 1 A_Raise
    loop
  Fire:
    CRBW D 6 A_FireCrossbowPL1
    CRBW EFGH 3
    CRBW AB 4
    CRBW C 5 A_ReFire
    goto Ready
  "@
}

weaponinfo Blaster
{
  ammotype     AmmoClawOrb
  ammouse      1

  nextincycle  SkullRod
  previncycle  Crossbow

  flags        SILENCER|HAPTICRECOIL
  //mod          ""
  recoil       10
  hapticrecoil 1
  haptictime   1

  tracker      WeaponBlaster

  states
  @"
  Spawn:
    WBLS A -1
    stop
  Ready:
    BLSR A 1 A_WeaponReady
    loop
  Deselect:
    BLSR A 1 A_Lower
    loop
  Select:
    BLSR A 1 A_Raise
    loop
  Fire:
    BLSR BC 3
  Hold:
    BLSR D 2 A_FireBlasterPL1
    BLSR CB 2
    BLSR A 0 A_ReFire
    goto Ready
  "@
}

