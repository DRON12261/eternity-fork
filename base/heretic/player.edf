weaponinfo Crossbow
{
  ammotype     AmmoEtherealArrow
  ammouse      1

  nextincycle  Blaster
  previncycle  GoldWand

  flags        SILENCER|HAPTICRECOIL
  //mod          ""
  recoil       30
  hapticrecoil 3
  haptictime   3

  tracker      WeaponCrossbow

  states
  @"
  Ready:
    CRBW AAAAAABBBBBBCCCCCC 1 A_WeaponReady
    loop
  Deselect:
    CRBW A 1 A_Lower
    loop
  Select:
    CRBW A 1 A_Raise
    loop
  Fire:
    CRBW D 6 A_FireCrossbowPL1
    CRBW EFGH 3
    CRBW AB 4
    CRBW C 5 A_ReFire
    goto Ready
  "@
}

