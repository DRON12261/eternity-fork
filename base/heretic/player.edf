weaponinfo Staff
{
  nextincycle  Gauntlets
  previncycle  Mace

  flags        FLEEMELEE|NOHITGHOSTS|SILENCER
  //mod          ""
  recoil       10

  tracker      WeaponStaff

  states
  @"
  Ready:
    STFF A 1 A_WeaponReady
    loop
  Deselect:
    STFF A 1 A_Lower
    loop
  Select:
    STFF A 1 A_Raise
    loop
  Fire:
    STFF B 6
    STFF C 8 A_StaffAttackPL1
    STFF B 8 A_ReFire
    goto ready
  "@
}

