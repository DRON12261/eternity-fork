weaponinfo Blaster
{
  ammotype     AmmoClawOrb
  ammouse      1

  nextincycle  SkullRod
  previncycle  Crossbow

  flags        SILENCER|HAPTICRECOIL
  //mod          ""
  recoil       10
  hapticrecoil 1
  haptictime   1

  tracker      WeaponBlaster

  states
  @"
  Spawn:
    WBLS A -1
    stop
  Ready:
    BLSR A 1 A_WeaponReady
    loop
  Deselect:
    BLSR A 1 A_Lower
    loop
  Select:
    BLSR A 1 A_Raise
    loop
  Fire:
    BLSR BC 3
  Hold:
    BLSR D 2 A_FireBlasterPL1
    BLSR CB 2
    BLSR A 0 A_ReFire
    goto Ready
  "@
}

